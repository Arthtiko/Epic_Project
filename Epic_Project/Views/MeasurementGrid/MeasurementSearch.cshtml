@model MeasurementSearchModel
<form asp-controller="MeasurementGrid" asp-action="MeasurementSearch" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="EpicId" class="col-sm-2 col-form-label">Epic Id</label>
        @(Html.Kendo().TextBox().Name("EpicId").HtmlAttributes(new { placeholder = "Enter Epic Id", style = "width:220px" })
        )
    </div>
    <div class="form-group row">
        <label asp-for="Year" class="col-sm-2 col-form-label">Year</label>
        @(Html.Kendo().TextBox().Name("Year").HtmlAttributes(new { placeholder = "Enter Year", style = "width:220px" })
        )
    </div>
    <div class="form-group row">
        <label asp-for="Month" class="col-sm-2 col-form-label">Month</label>
        @(Html.Kendo().TextBox().Name("Month").HtmlAttributes(new { placeholder = "Enter Month", style = "width:220px" })
        )
    </div>
    <div class="form-group row">
        <button class="k-button k-primary" type="submit">Submit</button>
    </div>
</form>