@page
@model RegisterModel
@{
    ViewData["Title"] = "Create New User";
}



<div class="row" style="margin-left: 20px;">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>@ViewData["Title"]</h2>
            <hr />
            <div class="form-group">
                <label asp-for="Input.EmployeeId"></label>
                <input asp-for="Input.EmployeeId" class="form-control k-input input-pad-height" />
                <span asp-validation-for="Input.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control k-input input-pad-height" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control k-input input-pad-height" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control k-input input-pad-height" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Role"></label>
                <select id="role-select" class="form-control k-select input-pad-height" asp-for="Input.Role">
                    <option value="Team Leader">Team Leader</option>
                    <option value="Program Manager">Program Manager</option>
                    <option value="Project Manager">Project Manager</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .input-pad-height {
        font-size: 16px;
        padding: 10px;
        height: auto;
    }
</style>