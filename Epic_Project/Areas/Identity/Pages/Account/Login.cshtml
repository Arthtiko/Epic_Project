@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="container">
    <div class="card card-login mx-auto ml-5 mt-5" style="max-width: 500px;">
        <div class="card-header">@ViewData["Title"]</div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group" style="width: 470px;">
                    <label asp-for="Input.Email" style="font-size: 16px;"></label>
                    <input asp-for="Input.Email" class="inputSize form-control"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 470px;">
                    <label asp-for="Input.Password" style="font-size: 16px;"></label>
                    <input asp-for="Input.Password" class="inputSize form-control" style="font-size: 20px;"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 470px;">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" style="font-size: 16px;">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group" style="width: 470px;">
                    <button type="submit" class="btn btn-primary btn-block inputSize">Log in</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .inputSize {
        height: 50px;
    }
</style>